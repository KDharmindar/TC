<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Word")
        </th>
        <th>
            @Html.DisplayName("Result")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quester.Question)
            </td>
            <td>
                @if (item.Result == true)
                {

                    <img src="~/images/tick1.png">
                }
                else
                {
                    <img src="~/images/cros.png" width="30" height="30">
                }
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>*@
        </tr>
    }

</table>
<br />
<br />
<div>
    @if (ViewBag.Status == "Fail")
    {
        <div class="fail">
            <div class="col-md-6">
                <p style="font-weight:bold">
                    Result in Percentage : @ViewBag.percentage     %
                </p>
            </div>
            <div class="col-md-6">
                <p style="font-weight:bold">

                    You are Fail. Please try again.
                </p>
            </div>
        </div>
    }
    else if (ViewBag.Status == "Pass")
    {
        <div class="pass">

            <div class="col-md-6">
                <p style="font-weight:bold">

                    Result in Percentage : @ViewBag.percentage     %
                </p>
            </div>
            <div class="col-md-6">
                <p style="font-weight:bold">

                    Congratulations! You have successfully passed the exam.
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-6">
            <p style="font-weight:bold; color: red;">

                No Words Select, Please select Words for Test!
            </p>
        </div>
    }
    <br />
    <br />
</div>
