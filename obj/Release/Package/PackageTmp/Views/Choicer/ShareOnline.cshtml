@{
    ViewBag.Title = "Share Online";
    Layout = "../Shared/_Layout_Choicer_Admin.cshtml";
}
<br />
<br />
@*<h4>
    @Html.ActionLink("Create New", "Create")
</h4>*@


<br />
<br />
    <h4>ShareOnline List</h4>
<br />
<div class="col-md-6">
    @using (Html.BeginForm("ShareOnline", "Choicer", FormMethod.Get))
    {
        <div class="form-group">
            Search By Word Name:
            <p>
                @Html.Editor("SearchString", ViewBag.CurrentFilter as string, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                &nbsp;  <input type="submit" value="Search" class="btn btn-primary" />
            </p>
        </div>

    }
</div>
<br />
<div class="col-md-6">
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Tasks Dropdown List
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <!-- Add header here -->
            <li>@Html.ActionLink("Main Panel", "Home", "Choicer")</li>
            <li>@Html.ActionLink("Questions List", "Index", "Choicer")</li>
            <li>@Html.ActionLink("Favourites List", "Favourite", "Choicer")</li>
            <li>@Html.ActionLink("Skip List", "SkipList", "Choicer")</li>
            <li>@Html.ActionLink("Exams", "Index", "CTest")</li>
            <li>@Html.ActionLink("Sharing", "MainShare", "ChoiceShare")</li>


        </ul>
    </div>
</div>
<div class="clearfix"></div>

      <br />
<div style="height: 600px; overflow: scroll;">

    <br />
    <table class="table table-hover table-striped">

        <tr>

            <th>
                @Html.ActionLink("Questions", "ShareOnline", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink(" Category ", "ShareOnline", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CQuestion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ChoicerID }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.ChoicerID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.ChoicerID })
                </td>
            </tr>
        }

    </table>
</div>

