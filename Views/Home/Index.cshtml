@{
    ViewBag.Title = "PC";
    Layout = "../Shared/_Layout.cshtml";
}

<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 90%;
        margin-left: 20px;
    }
</style>
<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel"  data-interval="10000">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/Business.png" alt="tuitioncloud">
            </div>

            <div class="item">
                <img src="~/images/Teacher.png" alt="tuitioncloud">
            </div>

            <div class="item">
                <img src="~/images/Students.png" alt="tuitioncloud">
            </div>

            <div class="item">
                <img src="~/images/Home.png" alt="tuitioncloud">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4>
                <a href="@Url.Action("Home_Wordutopia", "Home", null)">
                    <img src="~/images/wordutopia_homeicon.png" style="vertical-align: middle; width: 100px; height: 100px "> Wordutopia
                </a>
            </h4>
            <p align="center"><a class="btn btn-primary" href="@Url.Action("Home_Wordutopia", "Home")">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h4>
                <a href="@Url.Action("Home_Quester", "Home", null)">
                    <img src="~/images/Quester_homeicone.png" style="vertical-align: middle;  width: 100px; height: 100px "> Quester
                </a>
            </h4>
            <p align="center"><a class="btn btn-primary" href="@Url.Action("Home_Quester", "Home")">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h4>
                <a href="@Url.Action("Home_Choicer", "Home", null)">
                    <img src="~/images/Choicer_homeicon.png" style="vertical-align: middle;  width: 100px; height: 100px "> Choicer
                </a>
            </h4>

            <p align="center"><a class="btn btn-primary" href="@Url.Action("Home_Choicer", "Home")">Learn more &raquo;</a></p>
        </div>
    </div>
</div>


